<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeWhite" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/wwhite</item>
        <item name="colorPrimaryDark">@color/darkWhite</item>
        <item name="colorAccent">@color/otherWhite</item>
        <item name="actionMenuTextColor">@color/blackC</item>
        <item name="android:actionBarStyle">@style/AppThemeWhite.ActionBarStyle</item>
    </style>

    <style name="AppThemeWhite.ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppThemeWhite.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppThemeWhite.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blackC</item>
    </style>
</resources>
